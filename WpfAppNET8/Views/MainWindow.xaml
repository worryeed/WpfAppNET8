<Window x:Class="WpfAppNET8.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppNET8"
        mc:Ignorable="d"
        Title="Главное окно"
        Height="750"
        Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListView Grid.Row="0"
                  x:Name="MyListView">
            <ListView.ItemTemplate>
                <ItemContainerTemplate>
                    <Border BorderThickness="1"
                            BorderBrush="Black"
                            Width="600"
                            Padding="15"
                            Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0"
                                        Orientation="Vertical">
                                <TextBlock Text="{Binding TypeWithName}"
                                           FontSize="18" />
                                <TextBlock Text="{Binding MinCount}" />
                                <TextBlock Text="{Binding CurrentCount}" />
                                <TextBlock Text="{Binding PriceWithUnit}" />
                            </StackPanel>

                            <StackPanel Grid.Column="1"
                                        Orientation="Vertical">
                                <TextBlock Text="{Binding PriceOfBatch}"
                                           FontSize="16" Margin="10" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </ItemContainerTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Grid.Row="1"
                    Background="#ABCFCE"
                    Orientation="Horizontal"
                    HorizontalAlignment="Stretch">
            <Button Content="Добавить"
                    Click="Add_Click"
                    Margin="50,0,0,0" />
            <Image Source="C:\Users\KISTO\Desktop\Лахов ИСП-406\Мозаика.png"
                   Width="80"
                   Height="80"
                   Margin="50,0,0,0" />
        </StackPanel>
    </Grid>
</Window>
